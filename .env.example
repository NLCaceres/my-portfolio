# Example of all environment variables that the app SHOULD be set
RACK_ENV=development
PORT=1234 # 80 is typically your HTTP port while 443 these days is your HTTPS version
LANG=en_US.UTF-8
RAILS_ENV=development
RAILS_SERVE_STATIC_FILES=enabled
RAILS_LOG_TO_STDOUT=enabled
SECRET_KEY_BASE=Some128countSecretKey # Can be generated by 'bin/rails secret'
TURNSTILE_SECRET_KEY=SomeLongKey # Receive from Cloudflare Turnstile
IS_STAGING=false # Used to trigger production behavior from Ruby on Rails for local testing
MY_CONTACT_EMAIL=foo@example.com
APP_CONTACT_EMAIL=bar@example.com
# Likely to be set by the platform provider (Heroku, Railway, etc)
REDIS_URL=
DATABASE_URL=
# Rest are for the frontend
VITE_CONTACTABLE=false
VITE_RACK_ENV=development # Must match RACK_ENV above
VITE_TURNSTILE_SITE_KEY=SomeReallyLongKey # Receive from Cloudflare Turnstile