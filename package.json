{
  "name": "react-rails-portfolio",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^20.9.0",
    "npm": "^10.5.0"
  },
  "scripts": {
    "railway-install": "npm --prefix react-client install --frozen-lockfile",
    "railway-build": "npm --prefix react-client build",
    "railway-copy": "cp -a react-client/build/. public/",
    "railway-rename-index": "mv public/index.html public/main.html",
    "railway-deploy": "npm railway-build && npm railway-copy && npm railway-rename-index"
  }
}
